        'uColor1': { value: null },
        'uColor2': { value: null }}
      ] );

  let mulCMat = new THREE.ShaderMaterial({
    side:THREE.DoubleSide,
    uniforms: mulCUniform,
    vertexShader: document.getElementById('vs_uv').textContent,
    fragmentShader: document.getElementById('fs_uv').textContent,
    lights: true
  });

  let eyeMat = mulCMat.clone();


  //geometry
  let upperArmGeoL;
  let upperArmGeoR;
  let jointArmGeoL;
  let jointArmGeoR;
  let lowerArmGeoL;
  let lowerArmGeoR;

