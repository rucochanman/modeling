  makeBody(0,0,0);

  //arm_update(LEFT, 0.8, 0.0, 0, PI/2);
  //arm_update(RIGHT, 0.0, 0.0, 0, PI/2);

  //armGL.position.set(80,-1,0);
  //maketest();
  //makeBody(1, 0.0, 0.0);

  //makej();

  let count = 0;
  let n = 0;
  let n2 = 0;
  let flag = false;
  //animate();



